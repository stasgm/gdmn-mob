{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "noEmit": false,
    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./__tests__/**/*", "./index.ts"],
  "exclude": ["dist", "node_modules"]
}
