{
  "name": "@lib/store",
  "version": "1.0.0",
  "description": "common client store package",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean-dist && tsc",
    "clean-dist": "rimraf --glob dist/*",
    "prettier:check": "prettier --check \"**/*.ts*\"",
    "prettier:fix": "prettier --write \"**/*.ts*\"",
    "lint": "eslint \"**/*.ts*\"",
    "lint:fix": "eslint --fix \"**/*.ts*\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier:fix",
      "yarn lint"
    ]
  },
  "prettier": "@config/prettier-config",
  "dependencies": {
    "@lib/client-api": "*",
    "@lib/client-config": "*",
    "@lib/client-types": "*",
    "@lib/mock": "*",
    "@lib/types": "*",
    "@redux-devtools/extension": "^3.2.5",
    "@types/node": "^20.8.4",
    "@types/redux-actions": "^2.6.5",
    "@types/redux-logger": "3.0.12",
    "react-redux": "^8.1.3",
    "redux": "4.2.1",
    "redux-logger": "~3.0.6",
    "redux-thunk": "^2.4.2",
    "reselect": "~4.1.7",
    "typesafe-actions": "^5.1.0"
  },
  "devDependencies": {
    "@config/eslint-config": "*",
    "@config/prettier-config": "*",
    "lint-staged": "^15.2.10",
    "typescript": "^5.2.2"
  }
}
