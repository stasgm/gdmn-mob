{
  "name": "root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "configs/*"
  ],
  "scripts": {
    "app:server": "lerna run --scope=@apps/server start --stream",
    "app:server-dev": "lerna run --scope=@apps/server dev --stream",
    "app:test": "lerna run --scope=@apps/expo-app-1 start --stream",
    "app:web": "lerna run --scope=@apps/web-admin start --stream",
    "expo:app": "lerna run --scope=@apps/app start --stream",
    "expo:inventory": "lerna run --scope=@apps/app-inventory start --stream",
    "expo:bc-movement": "lerna run --scope=@apps/bc-movement start --stream",
    "expo:fp-movement": "lerna run --scope=@apps/fp-movement start --stream",
    "expo:gd-movement": "lerna run --scope=@apps/gd-movement start --stream",
    "expo:sales-representative": "lerna run --scope=@apps/sales-representative start --stream",
    "lint": "lerna run --scope=@lib/* --scope=@apps/* lint --stream",
    "lint:fix": "lerna run --scope=@lib/* --scope=@apps/* lint:fix --stream",
    "prettier:fix": "lerna run --scope=@lib/* --scope=@apps/* prettier:fix --stream",
    "lerna": "lerna bootstrap",
    "build": "yarn build:lib && yarn build:web-admin && yarn build:server",
    "build:lib": "lerna run --scope=@lib/* build --stream",
    "build:server": "lerna run --scope=@apps/server build --stream",
    "build:web-admin": "lerna run --scope=@apps/web-admin build --stream",
    "build:web-admin-prod": "lerna run --scope=@apps/web-admin build-prod-docker --stream",
    "build:web-admin-linux": "lerna run --scope=@apps/web-admin build-linux --stream",
    "clean": "lerna clean",
    "clean:all": "yarn clean:node-modules && yarn clean:expo-cache && yarn clean:dist",
    "clean:dist": "rimraf packages/*/dist && rimraf apps/*/dist && rimraf configs/*/dist",
    "clean:node-modules": "rimraf node_modules && rimraf apps/*/node_modules",
    "clean:expo-cache": "rimraf apps/*/.expo packages/*/.expo",
    "update": "yarn upgrade-interactive --latest",
    "lint-staged-project": "lerna run --scope=@lib/* --scope=@apps/* --concurrency 1 --stream precommit --since HEAD --exclude-dependents",
    "docker-compose: build&up": "sudo docker-compose up --remove-orphans --build",
    "docker-compose: build": "sudo docker-compose build",
    "docker-compose: up": "sudo docker-compose up --remove-orphans",
    "postinstall": "node -e \"process.env.NODE_ENV != 'production' && process.exit(1)\" || husky install",
    "prepare": "node -e \"process.env.NODE_ENV != 'production' && process.exit(1)\" || husky install"
  },
  "lint-staged": {
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@config/prettier-config": "*",
    "concurrently": "^8.2.0",
    "husky": "^8.0.3",
    "lerna": "^7.1.4",
    "lint-staged": "^13.2.0",
    "patch-package": "^7.0.2",
    "rimraf": "^3.0.2",
    "sort-package-json": "2.5.1",
    "typescript": "^5.1.3"
  },
  "prettier": "@config/prettier-config"
}
