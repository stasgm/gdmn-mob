{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "**/app",
      "**/app/**",
      "**/mobile-inv",
      "**/mobile-inv/**",
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**",
      "**/@babel/core",
      "**/@babel/core/**"
    ]
  },
  "scripts": {
    "app:server": "lerna run --scope=@apps/server start --stream --",
    "app:web": "lerna run --scope=@apps/web-interface start --stream --",
    "expo:inv": "lerna run --scope=@apps/mobile-inventory start --stream --",
    "expo:app": "lerna run --scope=@apps/app start --stream --",
    "lint": "eslint --fix --ext .js,.ts,.tsx",
    "lint:ci": "eslint --quiet --ext .js,.ts,.tsx .",
    "lint:fix": "eslint --fix --ext .js,.ts,.tsx .",
    "prettier:check": "prettier --check \"src/**/*.ts*\"",
    "prettier:fix": "prettier --write \"./apps/**/src/**/*.ts\"",
    "lerna": "lerna bootstrap",
    "build": "lerna run --scope=@lib/mylib build --stream --",
    "clean": "lerna clean",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",
    "upgrade": "lerna exec -- yarn upgrade --latest  --stream --",
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "applypatch-msg": "echo \"[Husky] applypatch-msg\"",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.yml": [
      "yarn prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "yarn prettier --write",
      "yarn lint"
    ],
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "concurrently": "^6.0.0",
    "expo-yarn-workspaces": "^1.3.1",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "jest-cli": "26.6.3",
    "jest-junit": "^12.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "metro-config": "^0.65.1",
    "prettier": "^2.2.1",
    "sort-package-json": "1.49.0",
    "typescript": "^4.2.2"
  }
}
