{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ],
    "nohoist": [
      "**/app",
      "**/app/**",
      "**/mobile-inv",
      "**/mobile-inv/**"
    ]
  },
  "scripts": {
    "app:server": "lerna run --scope=@apps/server start --stream --",
    "app:web": "lerna run --scope=@apps/web-interface start --stream --",
    "expo:app": "lerna run --scope=@apps/app start --stream --",
    "lint": "lerna run --scope=@lib/* --scope=@apps/* lint --stream --",
    "lint:fix": "lerna run --scope=@lib/* --scope=@apps/* lint:fix --stream --",
    "prettier:fix": "lerna run --scope=@lib/* --scope=@apps/* prettier:fix --stream --",
    "lerna": "lerna bootstrap",
    "build:lib": "lerna run --scope=@lib/* build --stream --",
    "clean": "lerna clean",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",
    "upgrade": "lerna exec -- yarn upgrade --latest  --stream --",
    "postinstall": "husky install && cd apps/app && yarn postinstall"
  },
  "lint-staged": {
    "*.yml": [
      "yarn prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "yarn prettier:fix",
      "yarn lint"
    ],
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@config/eslint-config": "*",
    "@config/eslint-config-react": "*",
    "@config/prettier-config": "*",
    "@types/jest": "^26.0.20",
    "concurrently": "^6.0.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "jest-cli": "26.6.3",
    "jest-junit": "^12.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "sort-package-json": "1.49.0",
    "typescript": "^4.2.2"
  }
}
