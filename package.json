{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "configs/*",
      "packages/*",
      "apps/*"
    ]
  },
  "scripts": {
    "app:server": "lerna run --scope=@apps/server start --stream --",
    "app:web": "lerna run --scope=@apps/web-interface start --stream --",
    "expo:app": "lerna run --scope=@apps/app start --stream --",
    "lint": "lerna run --scope=@lib/* --scope=@apps/* lint --stream --",
    "lint:fix": "lerna run --scope=@lib/* --scope=@apps/* lint:fix --stream --",
    "prettier:fix": "lerna run --scope=@lib/* --scope=@apps/* prettier:fix --stream --",
    "lerna": "lerna bootstrap",
    "build:lib": "lerna run --scope=@lib/* build --stream --",
    "clean": "lerna clean",
    "clean:all": "yarn clean:node-modules && yarn clean:expo-cache",
    "clean:node-modules": "rimraf node_modules packages/*/node_modules apps/*/node_modules configs/*/node_modules",
    "clean:expo-cache": "rimraf apps/*/.expo packages/*/.expo",
    "upgrade": "yarn upgrade-interactive --latest",
    "lint-staged-project": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "package.json": [
      "yarn prettier --write",
      "yarn sort-package-json"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "concurrently": "^6.0.0",
    "expo-yarn-workspaces": "^1.3.1",
    "husky": "^5.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sort-package-json": "1.49.0",
    "typescript": "^4.2.3"
  }
}
