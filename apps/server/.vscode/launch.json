{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug server",
      "type": "node",
      "request": "launch",
      "args": ["src/index.ts"],
      "runtimeArgs": ["-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "sourceMaps": true,
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ],
}
