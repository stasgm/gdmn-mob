{
  "name": "@apps/server",
  "version": "0.2.0",
  "private": true,
  "description": "Microservice for web & molb application",
  "scripts": {
    "build": "yarn clean-dist && tsc",
    "dev": "cross-env NODE_ENV=development IS_ADMIN_ENABLED=true nodemon src/index.ts",
    "dev:start-js": "yarn build && cross-env NODE_ENV=development IS_ADMIN_ENABLED=true node ./dist/src/index.js",
    "start": "cross-env IS_ADMIN_ENABLED=true node ./dist/src/index.js",
    "clean-dist": "rimraf ./dist",
    "nodemon:start": "yarn build && cross-env IS_ADMIN_ENABLED=true nodemon ./dist/src/index.js --watch",
    "start:mock": "cross-env MOCK=true nodemon src/index.ts",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "precommit": "lint-staged",
    "test": "cross-env NODE_ENV=test jest src/utils/__tests__/files.spec.ts --colors"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier:fix",
      "yarn lint"
    ]
  },
  "prettier": "@config/prettier-config",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@lib/types": "*",
    "@types/bcrypt": "^5.0.2",
    "@types/inquirer": "^9.0.7",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-joi-router": "^8.0.7",
    "@types/koa-morgan": "^1.0.8",
    "@types/koa-passport": "^6.0.3",
    "@types/koa-router": "^7.4.8",
    "@types/koa-session": "^6.4.5",
    "@types/koa-static-server": "^1.5.3",
    "@types/koa__cors": "^4.0.3",
    "@types/passport-local": "^1.0.38",
    "bcrypt": "^5.1.1",
    "dotenv": "~16.4.5",
    "koa": "^2.14.2",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.3",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^7.0.2",
    "koa-joi-router": "^8.0.0",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1.4",
    "koa-router": "^12.0.1",
    "koa-session": "^6.3.1",
    "koa-static-server": "^1.5.2",
    "koa2-connect-history-api-fallback": "^0.1.3",
    "nanoid": "^3.3.4",
    "passport-local": "^1.0",
    "ramda": "^0.29.1",
    "rotating-file-stream": "^3.2.3",
    "typescript": "^5.2.2",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@config/eslint-config": "*",
    "@config/prettier-config": "*",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.8.4",
    "@types/ramda": "^0.29.9",
    "@types/supertest": "^2.0.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.1.2"
  }
}
