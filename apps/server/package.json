{
  "name": "@apps/server",
  "version": "0.1.0",
  "description": "Microservice for mobile application",
  "private": true,
  "scripts": {
    "pm2:start": "pm2 start ./dist/server/src/index.js --watch --name mob-app",
    "pm2:status": "pm2 status mob-app",
    "pm2:stop": "pm2 stop mob-app",
    "build": "tsc",
    "start:js": "node ./dist/server/src/index.js",
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon src/index.ts",
    "checkup": "yarn run prettier:fix && yarn run eslint:fix",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "eslint:run": "eslint \"src/**/*.ts\"",
    "eslint:fix": "eslint --fix \"src/**/*.ts\"",
    "test": "cross-env NODE_ENV=test jest --detectOpenHandles"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@koa/cors": "^3.1",
    "@types/bcrypt": "^3.0.0",
    "@types/jest": "^26.0.19",
    "@types/koa": "^2.11",
    "@types/koa-bodyparser": "^4.3",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-passport": "^4.0",
    "@types/koa-router": "^7.4",
    "@types/koa-session": "^5.10",
    "@types/koa__cors": "^3.0",
    "@types/passport-local": "^1.0",
    "@types/ramda": "^0.27.34",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/eslint-plugin-tslint": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "cross-env": "^7.0",
    "eslint": "^7.16.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.5.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "nodemon": "^2.0",
    "pm2": "^4.5.1",
    "prettier": "^2.2.1",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9",
    "tslint": "^6.1.3",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-microsoft-contrib": "^6.2.0",
    "typescript": "~4.1",
    "winston": "^3.3.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "koa": "^2.13",
    "koa-bodyparser": "^4.3",
    "koa-compose": "^4.1.0",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1",
    "koa-router": "^10.0",
    "koa-session": "^6.1",
    "log4js": "^6.3",
    "passport-local": "^1.0",
    "ramda": "^0.27.1",
    "uuid": "^8.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
