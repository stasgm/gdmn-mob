{
  "name": "@apps/server",
  "version": "0.1.0",
  "private": true,
  "description": "Microservice for web & molb application",
  "scripts": {
    "build": "yarn clean-dist && tsc",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "dev:start-js": "yarn build && cross-env NODE_ENV=development PUBLIC_PATH=/admin/ node ./dist/src/index.js",
    "start": "cross-env PUBLIC_PATH=/admin/ node ./dist/src/index.js",
    "clean-dist": "rimraf ./dist",
    "nodemon:start": "yarn build && cross-env PUBLIC_PATH=/admin/ nodemon ./dist/src/index.js --watch",
    "start:mock": "cross-env MOCK=true nodemon src/index.ts",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "precommit": "lint-staged",
    "test": "cross-env NODE_ENV=test jest --colors"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier:fix",
      "yarn lint"
    ]
  },
  "prettier": "@config/prettier-config",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@lib/types": "*",
    "@types/inquirer": "^9.0.3",
    "bcrypt": "^5.1.0",
    "dotenv": "~16.0.3",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^6.1.0",
    "koa-joi-router": "^8.0.0",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1.4",
    "koa-router": "^12.0.0",
    "koa-session": "^6.3.1",
    "koa-static-server": "^1.3.1",
    "koa2-connect-history-api-fallback": "^0.1.3",
    "nanoid": "^3.3.4",
    "passport-local": "^1.0",
    "ramda": "^0.28.0",
    "rotating-file-stream": "^3.1.0",
    "winston-daily-rotate-file": "^4.7.1",
    "typescript": "~4.8.4",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-joi-router": "^8.0.0",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.4.2",
    "@types/koa-session": "^5.10",
    "@types/koa-static-server": "^1.3.1",
    "@types/koa__cors": "^3.0",
    "@types/bcrypt": "^5.0.0",
    "@types/passport-local": "^1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@config/eslint-config": "*",
    "@config/prettier-config": "*",
    "@types/jest": "^29.2.5",
    "@types/ramda": "^0.28.20",
    "@types/supertest": "^2.0.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.33.0",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^4.1.2"
  }
}
