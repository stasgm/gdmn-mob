{
  "name": "@apps/server",
  "version": "0.1.0",
  "private": true,
  "description": "Microservice for web & molb application",
  "scripts": {
    "pm2:start": "pm2 start ./dist/server/src/index.js --watch --name mob-app",
    "pm2:status": "pm2 status mob-app",
    "pm2:stop": "pm2 stop mob-app",
    "build": "yarn clean-dist && tsc",
    "clean-dist": "rimraf dist/*",
    "start:js": "node ./dist/server/src/index.js",
    "start": "ts-node ./src/index.ts",
    "dev": "nodemon src/index.ts",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "precommit": "lint-staged",
    "test": "cross-env NODE_ENV=test jest --colors --detectOpenHandles"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier:fix",
      "yarn lint"
    ]
  },
  "prettier": "@config/prettier-config",
  "dependencies": {
    "@koa/cors": "^3.1",
    "@lib/types": "*",
    "@types/inquirer": "^7.3.1",
    "bcrypt": "^5.0.1",
    "inquirer": "^8.1.0",
    "koa": "^2.13",
    "koa-bodyparser": "^4.3",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^6.1.0",
    "koa-joi-router": "^8.0.0",
    "koa-morgan": "^1.0.1",
    "koa-passport": "^4.1",
    "koa-router": "^10.0",
    "koa-session": "^6.2.0",
    "passport-local": "^1.0",
    "ramda": "^0.27.1",
    "uuid": "^8.3"
  },
  "devDependencies": {
    "@config/eslint-config": "*",
    "@config/prettier-config": "*",
    "@types/bcrypt": "^5.0.0",
    "@types/jest": "^26.0.23",
    "@types/koa": "^2.13",
    "@types/koa-bodyparser": "^4.3",
    "@types/koa-joi-router": "^8.0.0",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-passport": "^4.0",
    "@types/koa-router": "^7.4.2",
    "@types/koa-session": "^5.10",
    "@types/koa__cors": "^3.0",
    "@types/mocha": "^8.2.2",
    "@types/passport-local": "^1.0",
    "@types/ramda": "^0.27.40",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3",
    "cross-env": "^7.0",
    "eslint": "^7.27.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0",
    "pm2": "^4.5.6",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.6",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9",
    "winston": "^3.3.3"
  }
}
