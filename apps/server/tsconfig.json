{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"allowJs": false,
		"checkJs": false,
		"declaration": true,
		"declarationMap": false,
		"sourceMap": false,
		"outDir": "./dist",
		"removeComments": true,
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"typeRoots": [
			"types",
			"node_modules/@types"
		],
	},
	"exclude": ["node_modules"],
	"include": ["src", "test"]
}
