{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "noEmit": false,
    "declarationDir": ".",
    "declarationMap": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "./dist",
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES6",
    "downlevelIteration": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "isolatedModules": false
  },
  "include": ["src/**/*.ts*", ".eslintrc.js"],
  "exclude": ["node_modules", "dist", "configs/**/*.js", "configs/webpack/*.js"]
}
