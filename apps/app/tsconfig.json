{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "noEmit": true,
    "rootDir": ".",
    "outDir": "./dist"
  },
  "include": ["./src/**/*", "./test/**/*", "./config/*", "./App.tsx"],
  "exclude": ["node_modules", "dist"]
}
