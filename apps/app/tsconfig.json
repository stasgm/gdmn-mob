{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "noEmit": true,
    "rootDir": "."
  },
  "include": ["./src/**/*", "./__tests__/**/*", "./config/*", "./App.tsx"],
  "exclude": ["dist", "node_modules"]
}
