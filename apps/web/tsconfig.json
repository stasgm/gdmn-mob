{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "composite": true,
    "declaration": true,
    "declarationDir": ".",
    "declarationMap": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "outDir": "./dist",
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES6",
    "downlevelIteration": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts*",
    ".eslintrc.js"
  ]
}
