{
  "name": "return-server",
  "version": "1.0.0",
  "description": "return-server",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start:js": "node ./dist/src/index.js",
    "start": "ts-node src/index.ts",
    "dev": "nodemon src/index.ts",
    "build": "yarn clean-dist && tsc",
    "clean-dist": "rimraf ./dist",
    "nodemon:start": "yarn build && nodemon ./dist/src/index.js --watch",
    "prettier:check": "prettier --check \"src/**/*.ts\"",
    "prettier:fix": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"./src/**/*.ts\"",
    "lint:fix": "eslint --fix \"./src/**/*.ts\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn prettier:fix",
      "yarn lint"
    ]
  },
  "prettier": "@config/prettier-config",
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.10.3",
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "nedb": "^1.8.0",
    "node-firebird-driver-native": "^2.3.0",
    "typescript": "^4.3.4"
  },
  "devDependencies": {
    "@config/eslint-config": "*",
    "@config/prettier-config": "*",
    "@types/bcrypt": "^5.0.0",
    "@types/nedb": "^1.8.12",
    "eslint": "^7.29.0",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "pm2": "^5.1.0",
    "prettier": "^2.7.1",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1"
  }
}
