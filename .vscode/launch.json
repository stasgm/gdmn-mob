  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug server",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}\\apps\\server\\src\\index.ts",
      "runtimeExecutable": "node",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "sourceMaps": true,
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
